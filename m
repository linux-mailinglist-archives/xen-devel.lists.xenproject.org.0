     int i;
     unsigned int num, len;
=20
+    e =3D xs_directory(h, XBT_NULL, path, &num);
+    if (e =3D=3D NULL) {
+        if (cur_depth && (errno =3D=3D ENOENT || errno =3D=3D EACCES)) {
+            /* If a node disappears while recursing, silently move on. */
+            return;
+        }
+
+        err(1, "xs_directory (%s)", path);
+    }
